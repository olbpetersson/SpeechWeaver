<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

 <ListView
        android:id="@+id/resultListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/networkTextLabel"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/generateReportButton"
        android:layout_alignParentLeft="true" >
    
    </ListView>

    <TextView
        android:id="@+id/networkTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:hint="Tap to write text to send"
        android:text="Caught input" />

    <ImageButton
        android:id="@+id/bGenerateReport"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/computericons01" />

    <ImageButton
        android:id="@+id/bTapToTalk"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/bGenerateReport"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/voice_search" />

</RelativeLayout>